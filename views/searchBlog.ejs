<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %> 
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="container text-white">
        <div class="text-white text-center uppercase ">
        <p class="text-4xl">sakamakon dubanka na <span class="text-[orange]"> "<%= searchTerm  %>"</span> </p>
        <p class="text-2xl">sakamako guda: <%=blogs.length%> </p>
        </div>
    </div>
    <section class="mt-10 p-4 md:p-8 md:grid grid-cols-3 gap-5 break-words md:w-[80%] mx-auto">
        <% blogs.forEach(blog=> { %>
            <div class="bg-[#640e64] mb-4 md:mb-0 drop-shadow-lg flex-1">
                <img src="" alt="">
                <div class="p-3 text-white capitalize">
                    <h1 class=" text-3xl font-bold">
                        <%= blog.title %>
                            <span class="text-sm bg-pink-300 p-1 rounded">
                                <%=blog.tag%>
                            </span>
                    </h1>
                    <p class="my-2">
                        <%= blog.doc.slice(0,200) %> ...
                    </p>
                    <div class="flex gap-2">
                        <a class="btn bg-green-400" href="/blog/<%=blog.id %>">read more</a>
                    </div>
                </div>
            </div>
            <% }); %>
            <% if(blogs.length <= 0) { %>
                <h1 class="text-red-400 text-center capitalize text-4xl">bamu da '<%=searchTerm  %>'  yanzu</h1>
            <% } %> 
    </section>
</body>
</html>